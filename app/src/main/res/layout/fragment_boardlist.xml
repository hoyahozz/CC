<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".Fragment.BoardListFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_layout"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/list_board1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/menu_mine"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="5dp"
                    android:background="@null"
                    android:text="내가 쓴 글"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/list_board2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/menu_comment"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="5dp"
                    android:background="@null"
                    android:text="댓글 단 글"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/list_board3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/menu_pin"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="5dp"
                    android:background="@null"
                    android:text="자유게시판"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/list_board4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/menu_pin"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="5dp"
                    android:background="@null"
                    android:text="정보게시판"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/list_board5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/menu_pin"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="5dp"
                    android:background="@null"
                    android:text="장터"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/list_board6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/menu_pin"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="5dp"
                    android:background="@null"
                    android:text="퇴사자게시판"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/list_board7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/menu_pin"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="5dp"
                    android:background="@null"
                    android:text="동아리"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
        </LinearLayout>


</FrameLayout>