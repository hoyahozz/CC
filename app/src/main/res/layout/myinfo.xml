<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:orientation="vertical"
    tools:context=".MyInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_layout"
        android:orientation="vertical">
        <TextView
            android:id="@+id/my_userID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="userID"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:id="@+id/my_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="userName"
            android:textColor="@color/colorGray"
            android:gravity="center"/>
        <TextView
            android:id="@+id/my_userNickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="userNickName"
            android:textColor="@color/colorGray"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_layout"
        android:orientation="vertical">
        <Button
            android:id="@+id/my_pwChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호 변경"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlack"/>
        <Button
            android:id="@+id/my_mailChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이메일 변경"
            android:background="@color/colorBlack"
            android:textColor="@color/colorWhite" />
        <Button
            android:id="@+id/my_nickChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="닉네임 변경"
            android:background="@color/colorBlack"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/my_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원 탈퇴"
            android:background="@color/colorBlack"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/my_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="로그아웃"
            android:background="@color/colorBlack"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

</LinearLayout>